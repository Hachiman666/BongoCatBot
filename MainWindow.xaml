<Window x:Class="Practica1Agentes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica1Agentes"
        mc:Ignorable="d"
        Title="BongoCat Bot" Height="550" Width="500">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/fondo4.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel Margin="10">
            <Image Height="93" Width="153" Source="/bongo-cat.gif"/>
            <TextBlock Text="¡Bienvenido Soy BongoCat Bot! " FontSize="20" FontWeight="Bold" TextAlignment="Center" FontFamily="Agency FB" Foreground="White"/>
            <TextBlock Text="Puedo recomendarte música por medio de tus gustos!" FontFamily="Agency FB" Foreground="White" FontSize="20" TextAlignment="Center"/>
            <Separator Margin="10" />
            <Button Content="Iniciar" Click="Button_Click" />
            <TextBlock x:Name="tbx" Margin="10" FontFamily="Agency FB" Foreground="White" FontSize="20" TextAlignment="Center"/>
            <ListBox x:Name="RecomendacionesListBox" Margin="10" FontSize="20"/>
        </StackPanel>
    </Grid>
</Window>
